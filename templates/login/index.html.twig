{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="dictionary"/> 

        <button type="submit" class="addBtn">login</button>
    </form>
    <br>
    <div class="return_login">
    <form method="POST" action="{{ path('register') }}">
    <button type="submit" class="addBtn">Go to Registration Page</button>
    </form>
</div>
{% endblock %}